<div class="container">
  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <h1>Burgers</h1>
    </div>
    <div class="col-sm-4">
    </div>
    </div>


<div class="row burger-content">
  <div class="col-sm-6">
<h2>Burgers Ordered</h2>
<ul>
{{#each burgers}}
{{#unless devoured}}
{{>burgers/burger-block devoured=true}}
{{/unless}}
{{/each}}
</ul>
</div>

<div class="col-sm-6">
<h2>Burgers devoured</h2>
<ul>
{{#each burgers}}
{{#if devoured}}
{{>burgers/burger-block devoured=false}}
{{/if}}
{{/each}}
</ul>
</div>
</div>

<div class="row">
  <div class="col-sm-4">

  </div>
  <div class="col-sm-4">
    <h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
  </form>

