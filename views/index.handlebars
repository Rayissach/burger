<div class="container">

  <div class="row">
    <div id="catimg">
    <img src="./assets/catburger.png">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 burg-head">
      {{!-- <img id="catimg" src="./assets/catburger.png"> --}}
        <h1>Eat Da Burger</h1>
    </div>
    </div>


<div class="row burger-content">
  <div class="col-sm-6">
<h2>Burgers Ordered</h2>
<div class="devour">
<ul>
{{#each burgers}}
{{#unless devoured}}
{{>burgers/burger-block devoured=true}}
{{/unless}}
{{/each}}
</ul>
</div>
</div>

<div class="col-sm-6">
<h2>Burgers Devoured</h2>
<ul>
{{#each burgers}}
{{#if devoured}}
{{>burgers/burgertwo-block devoured=false}}
{{/if}}
{{/each}}
</ul>
</div>
</div>

<div class="row">
  <div class="col-sm-4">

  </div>
  <div class="col-sm-4">
<form class="create-form">

  <div class="form-group">
    <label for="burg"></label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
  </form>
  <br>
  <p>Enter a Burger that you want to eat. Then click Add Burger</p>

  <div class="col-sm-4">

  </div>

  
</div>